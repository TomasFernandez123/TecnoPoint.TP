<!DOCTYPE html>
<html lang="es" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/varios.js"></script>
</head>

<body class="bg-body text-body">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <img src="/assets/logo.png" alt="Logo TecnoPoint" class="navbar-brand-logo" style="height: 40px;">
                <span class="fw-bold">TecnoPoint</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link " href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link active fw-bold text-primary" href="/admin/ventas">Ventas</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/logout">Cerrar sesiÃ³n</a></li>
                </ul>
                <button id="toggle-tema" class="btn btn-outline-secondary">ðŸŒ— Cambiar tema</button>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h1 class="mb-4">Listado de Ventas</h1>

        <% if (ventas.length===0) { %>
            <p>No hay ventas registradas.</p>
            <% } else { %>
                <% ventas.forEach(venta=> { %>
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <strong>Cliente:</strong>
                            <%= venta.nombre %> |
                                <strong>Fecha:</strong>
                                <%= new Date(venta.fecha).toLocaleDateString() %> |
                                    <strong>Total:</strong> $<%= venta.total.toLocaleString() %>
                        </div>
                        <div class="card-body">
                            <% if (venta.Productos && venta.Productos.length> 0) { %>
                                <h5 class="card-title">Productos vendidos:</h5>
                                <ul class="list-group list-group-flush">
                                    <% venta.Productos.forEach(prod=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>
                                                    <%= prod.nombre %>
                                                </strong><br>
                                                <small class="text-muted">
                                                    <%= prod.descripcion %>
                                                </small>
                                            </div>
                                            <span class="badge bg-primary rounded-pill">
                                                x<%= prod.VentaProducto.cantidad %>
                                            </span>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    <p class="text-muted">No hay productos asociados a esta venta.</p>
                                    <% } %>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>